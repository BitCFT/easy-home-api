generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Amenities {
  id    String @id
  label String @unique @db.VarChar(40)

  properties AmenitiesOnProperties[]
}

model Landlords {
  id            String @id
  name          String @db.VarChar(50)
  number        String @db.VarChar(20)
  email         String @unique @db.VarChar(50)
  password      String @db.VarChar(100)
  urlProfilePic String @db.VarChar(200)

  properties Properties[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tenants {
  id            String   @id
  name          String   @db.VarChar(50)
  number        String   @db.VarChar(20)
  email         String   @unique @db.VarChar(50)
  password      String   @db.VarChar(100)
  urlProfilePic String   @db.VarChar(200)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum PropertyTypes {
  HOUSE
  APARTAMENT
  DUPLEX
}

enum PropertyStatus {
  FREE
  BUSY
  SPLIT
}

model Properties {
  id        String         @id
  title     String         @db.VarChar(100)
  type      PropertyTypes
  status    PropertyStatus
  price     Float          @db.DoublePrecision
  bedrooms  Int            @db.SmallInt
  bathrooms Int            @db.SmallInt
  height    Float          @db.DoublePrecision
  width     Float          @db.DoublePrecision
  photosUrl String         @db.VarChar(200)

  amenities AmenitiesOnProperties[]

  Landlord   Landlords @relation(fields: [landlordId], references: [id])
  landlordId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AmenitiesOnProperties {
  property   Properties @relation(fields: [propertyId], references: [id])
  propertyId String
  amenity    Amenities  @relation(fields: [amenityId], references: [id])
  amenityId  String

  isMainTenant Boolean @default(false)

  @@id([propertyId, amenityId])
}
